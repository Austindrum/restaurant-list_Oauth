<div class="container user-bar">
  <div class="user-bar-outer">
    <div class="user-bar-inner">
      <form action="/users/login" method="POST">
        <h2 class="mb-4 text-center">使用者 <span class="text-warning">登入</span></h2>
        {{> message}}
        <div class="form-group">
            <input type="text" name="email" value="{{ email }}" class="form-control mb-3" placeholder="您的信箱....">
            <input type="password" name="password" class="form-control mb-3" placeholder="您的密碼....">
            <button class="btn btn-success w-100" type="submit">登入</button> 
        </div>
      </form>
      <form action="/auth/facebook" method="GET">
        <button class="btn btn-primary w-100" type="submit">FACEBOOK 登入</button> 
      </form>
    </div>
  </div>
</div>