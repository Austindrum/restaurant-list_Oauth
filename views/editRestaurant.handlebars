
<div class="container user-bar">
  <div class="user-bar-outer">
    <div class="user-bar-inner">
      <form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
        <h2 class="mb-4 text-center">編輯<span class="text-warning">餐廳</span>清單</h2>
        <div class="form-group">
            <input type="text" name="name" value="{{ restaurant.name }}" class="form-control mb-3" placeholder="店家名稱">
            <input type="text" name="name_en" value="{{ restaurant.name_en }}" class="form-control mb-3" placeholder="店家英文名稱">
            <input type="text" name="category" value="{{ restaurant.category }}" class="form-control mb-3" placeholder="餐飲類別">
            <input type="text" name="image" value="{{ restaurant.image }}" class="form-control mb-3" placeholder="照片連結">
            <input type="text" name="location" value="{{ restaurant.location }}" class="form-control mb-3" placeholder="地址">
            <input type="text" name="phone" value="{{ restaurant.phone }}" class="form-control mb-3" placeholder="電話">
            {{!-- <input type="text" name="" class="form-control mb-3" placeholder="googlemap"...."> --}}
            {{!-- <select name="rating" class="form-control mb-3">
              <option disabled>請選擇分數</option>
              <option value="1">1分</option>
              <option value="2">2分</option>
              <option value="3">3分</option>
              <option value="4">4分</option>
              <option value="5">5分</option>
            </select> --}}
            <input type="number" name="rating" value="{{ restaurant.rating }}" class="form-control mb-3" max="5.0" min="0" step="any" placeholder="評分 0 ~ 5">
            <textarea name="description" class="form-control mb-3" placeholder="描述一下" cols="30" rows="10">
                {{ restaurant.description }}
            </textarea>
            <button class="btn btn-secondary w-100" type="submit">更改</button> 
        </div>
      </form>
    </div>
  </div>
</div>