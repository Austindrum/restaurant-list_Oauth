<div class="container restaurant-bar">
  <div class="restaurant-bar-outer">
    <div class="restaurant-bar-inner">
      <form action="/restaurants" method="POST">
        <h2 class="mb-4 text-center border-bottom border-secondary pb-3">建立<span class="text-warning">餐廳</span>清單</h2>
        <div class="mb-2 text-white">
          <span class="text-danger mr-2">*</span>為必填欄位
        </div>
        {{> message}}
        <div class="form-group">
          <label for="shop-name" class="text-white h5">店家名稱 :  <span class="text-danger">*</span></label>
          <input value="{{name}}" type="text" name="name" id="shop-name" class="form-control mb-3" placeholder="布娜飛比利時啤酒餐廳">
        </div>
        <div class="form-group">
          <label for="shop-name-en" class="text-white h5">店家英文名稱 :</label>
          <input value="{{name_en}}" type="text" name="name_en" id="shop-name-en" class="form-control mb-3" placeholder="Bravo Beer">
        </div>
        <div class="form-group">
          <label for="shop-category" class="text-white h5">餐廳類別 :  <span class="text-danger">*</span></label>
          <input value="{{category}}" type="text" name="category" id="shop-category" class="form-control mb-3" placeholder="義式餐廳">
        </div>
        <div class="form-group">
          <label for="shop-image" class="text-white h5">照片連結 :</label>
          <input value="{{image}}" type="text" name="image" id="shop-image" class="form-control mb-3" placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5634/08.jpg">
        </div>
        <div class="form-group">
          <label for="shop-address" class="text-white h5">地址 :  <span class="text-danger">*</span></label>
          <input value="{{location}}" type="text" name="location" id="shop-address" class="form-control mb-3" placeholder="台北市松山區市民大道四段 185 號">
        </div>
        <div class="form-group">
          <label for="shop-phone" class="text-white h5">電話 :  <span class="text-danger">*</span></label>
          <input value="{{phone}}" type="text" name="phone" id="shop-phone" class="form-control mb-3" placeholder="02 2570 1255">
        </div>
        {{!-- <input type="text" name="" class="form-control mb-3" placeholder="googlemap"...."> --}}
        <div class="form-group">
          <label for="shop-rating" class="text-white h5">評分 :  <span class="text-danger">*</span></label>
          <input value="{{rating}}" type="number" name="rating" id="shop-rating" class="form-control mb-3" step="any" max="5.0" min="0" placeholder="0 ~ 5.0">
        </div>
        <div class="form-group">
          <label for="shop-description" class="text-white h5">內容分享 :</label>
          <textarea name="description" id="shop-description" class="form-control mb-3" placeholder="描述一下" cols="30" rows="10">
             {{description}}
          </textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-success w-100" type="submit">建立</button> 
        </div>
      </form>
    </div>
  </div>
</div>